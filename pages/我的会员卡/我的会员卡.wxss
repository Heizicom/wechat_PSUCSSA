.card-container {
  width: 640rpx; 
  height: 428rpx; 
  background: #fff;
  /**box-shadow: 0px 15px 50px -8px #DDD;**/
  box-shadow: 0px 5px 20px -5px #DDD;
  margin-left: 60rpx;
  position: absolute;
  top: 10%;
  /**padding: 0px 20px;**/
  border-radius: 10px 10px 10px 10px;
  display: flex;
  flex-direction: column;
  z-index: 9999;
}

.card-title1 {
  font-size: 40rpx;
  font-weight: 200;
  color: #444;
  line-height: 42rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.card-title2 {
  font-size: 30rpx;
  font-weight: 200;
  color: #444;
  line-height: 42rpx;
  margin-top: 6rpx;
