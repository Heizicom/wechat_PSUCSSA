@import "/utils/user.wxss";

.index {
  width: 100%;
  height: 100%;
  position: relative;
  font-size: 28rpx;
  border: 1rpx solid transparent;
}

.index-profile {
  width: 80%;
  margin: 100rpx auto 60rpx auto;
}

.index-profile__img {
  display: block;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  background-repeat: no-repeat;
  background-size: contain;
  overflow: hidden;
}

.index-profile__nickname {
  text-align: center;
  padding: 20rpx 0;
}

.index-title {
  font-size: 50rpx;
  font-weight: 400;
  text-align: center;
  height: 150rpx;
  color: dimgrey;
}

.index-books {
  width: 60%;
  margin: 50rpx auto;
  overflow: hidden;
}


.btn {
  font-size: 20rpx;
  margin: 0 10rpx;
}
.btn2 {
  width: 375rpx; 
  background-color: #fff; 
  font-size: 15px;
}
.loginbtn{
  width: 475rpx; 
  background-color: #fff; 
  font-size: 15px;
  margin-top: 400rpx;
}