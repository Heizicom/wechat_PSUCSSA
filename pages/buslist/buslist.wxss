/* pages/buslist/buslist.wxss */
.cataheader{
  margin-left: 58rpx;
  width: 530rpx; 
  height: 120rpx
}
.index-bd {
  padding: 0 30rpx 40rpx;
}
.kind-list-item {
  width: 100%;
  
  
  border-radius: 4rpx;
  overflow: hidden;
}
.kind-list-img2 {
  width: 40rpx;
  height: 40rpx;
}
.navigator-text {
  flex: 1;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " "; 
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8
}